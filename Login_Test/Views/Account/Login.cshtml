@using Login_Test.Viewmodels
@model LoginViewModel
@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AutoLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <button type="submit" class="btn btn-secondary">Automated Login</button>
</form>

<h3>Or login manually:</h3>

<form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Log in</button>
</form>